<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta Information -->
  <title>Create Event</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
    integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- External CSS: DatePicker -->
  <link rel="stylesheet" type="text/css" href="/datepicker/mtr-datepicker.min.css">
  <link rel="stylesheet" type="text/css" href="/datepicker/mtr-datepicker.default-theme.min.css">

  <!-- External Fonts -->

  <!-- App CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/createEventPage.css" type="text/css" />

  <!-- External JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- External JS: DatePicker -->
  <script type="text/javascript" src="/datepicker/mtr-datepicker.min.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>

  <nav id="nav">
    <span id="logo">Schoodle</span>
    <div class="icon">
      <i class="far fa-calendar-plus"></i>
    </div>
  </nav>

  <section>
    <article class="event-details">
      <form class="form-details" action="/events/new" method="POST">
        <div>
          <label for="name">Name
            <input type="text" id="name" name="owner_name">
          </label>
        </div>
        <div>
          <label for="email">Email
            <input type="text" id="email" name="owner_email">
          </label>
        </div>
        <div>
          <label for="title">Event Title
            <input type="text" name="event_title" id="title">
          </label>
        </div>
        <div>
          <span class="event-desc" for="description">Event Description</span>
          <textarea class="text-box" type="text" id="description" name="event_description"
            placeholder="What's the plan?"></textarea>
        </div>
        <div>
          <button type="submit">Create Event</button>
        </div>
      </form>
    </article>
  </section>

  <section>

    <form id="calendar-info">
      <article class="calendar-block">
        <span>start</span>
        <div id="first-mtr-datepicker">
          <script type="text/javascript">
            let configOne = {
              target: 'first-mtr-datepicker',
              future: true,
            };
            let myDatepickerOne = new MtrDatepicker(configOne);
            let myDatepickerOneOutput = myDatepickerOne.toLocaleString()
            console.log(myDatepickerOneOutput)
          </script>
          <div>
            <button type="submit">Add</button>
          </div>
        </div>

        <form></form>
        <span>end</span>
        <div id="second-mtr-datepicker">
          <script type="text/javascript">
            let configTwo = {
              target: 'second-mtr-datepicker',
              future: true
            };
            let myDatepickerTwo = new MtrDatepicker(configTwo);
            let myDatepickerTwoOutput = myDatepickerTwo.toLocaleString()
          </script>
        </div>
      </article>
    </form>

  </section>




</body>

</html>
