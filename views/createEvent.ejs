</head>

<body>

  <header class="header-overlay">
    <div class="px-3 py-2 text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-info text-decoration-none">
            <h4 class="nav-color-overlay nav-font-overlay">S C H N O O D L E</h4>
            <i class="fa-solid fa-dog"></i>
          </a>
          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
            <li>
              <a href="/" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-house"></i>
                </svg>
                <span class="nav-color-overlay">Home</span>
              </a>
            </li>
            <li>
              <a href="/events/new" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-calendar"></i>
                </svg>
                <span class="nav-color-overlay">Create Event</span>
              </a>
            </li>
            <li>
              <a href="/#" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-flag"></i>
                </svg>
                <span class="nav-color-overlay">Poll</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <section class="container mt-4">
    <article class="event-container">
      <form id="user-form">
        <div class="row poll-header">
          <div class="col-8 mt-1 mb-3">Create A Group Poll</div>
        </div>
        <div class="row">
          <div class="col-8 mt-3 event-input font-overlay">Name</div>
          <input class="col-11 mx-auto mt-1" type="text" id="name" name="owner_name">
          <div id="name-error-message"></div>
        </div>
        <div class="row">
          <div class="col-8 mt-3 event-input font-overlay">Email</div>
          <input class="col-11 mx-auto mt-1" type="text" id="email" name="owner_email">
          <div id="email-error-message"></div>
        </div>
        <div class="row">
          <div class="col-8 mt-3 event-input font-overlay">Event Title</div>
          <input class="col-11 mx-auto mt-1" type="text" id="title" name="event_title">
          <div id="title-error-message"></div>
        </div>
        <div class="row">
          <div class="col-8 mt-3 event-input font-overlay">Event Description</div>
          <textarea class="text-box col-11 mx-auto mt-1" type="text" id="description"
            name="event_description"></textarea>
          <div id="desc-error-message"></div>
        </div>
      </form>
    </article>
  </section>

  <section class="container mt-4">
    <article class="event-container">
      <div class="row poll-header">
        <div class="col-8 mt-1 mb-3">Add Your Times</div>
      </div>
      <div class="row">
        <div class="col">

          <form id="start-date-form">
            <div class="col-2 mt-3 font-overlay">Start</div>
            <input class="col-9 mt-1" type="datetime-local" id="start-date-input">
            <div>
              <button id="start-date-add-btn" class="btn btn-info btn-sm mb-1">Add</button>
              <button id="remove-start-date-btn" class="btn btn-warning btn-sm mb-1">Remove</button>
            </div>
          </form>

          <form id="end-date-form">
            <div class="col-2 mt-3 font-overlay">End</div>
            <input class="col-9 mt-1" type="datetime-local" id="end-date-input">
            <div>
              <button id="end-date-add-btn" class="btn btn-info btn-sm mb-1">Add</button>
              <button id="remove-end-date-btn" class="btn btn-warning btn-sm mb-1">Remove</button>

            </div>
          </form>

          <div class="w-100"></div>
        </div>
        <div class="col">
          <div class="col-12 mt-3 text-center font-overlay">Dates and Times</div>

          <div class="container set-time-border">
            <div class="start-end-time-header">
              <div>start</div>
              <div>end</div>
            </div>
            <div class="row">
              <div id="start-time-container" class="col"></div>
              <div id="end-time-container" class="col"></div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </section>

  <section class="container">
    <article class="row justify-content-center">
      <button class="col-3 mt-4 btn btn-info" type="submit" form="user-form">Create Poll</button>
    </article>
  </section>

  <footer class="footer-overlay">
    <span class="text-muted">Footer Information Here</span>
  </footer>

</body>

</html>
