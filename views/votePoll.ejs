<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta Information -->
  <title>Polling</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- App CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
  <link rel="stylesheet" href="/styles/votePollPage.css" type="text/css" />

  <!-- App JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Bootstrap / External CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
    integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- External Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC:wght@700&display=swap" rel="stylesheet">

  <!-- External JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>

  <header class="header-overlay">
    <div class="px-3 py-2 text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-info text-decoration-none">
            <h4 class="nav-color-overlay nav-font-overlay">S C H N O O D L E</h4>
            <i class="fa-solid fa-dog"></i>
          </a>

          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
            <li>
              <a href="/" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-house"></i>
                </svg>
                <span class="nav-color-overlay">Home</span>
              </a>
            </li>
            <li>
              <a href="/events/new" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-calendar"></i>
                </svg>
                <span class="nav-color-overlay">Create Event</span>
              </a>
            </li>
            <!-- <li>
              <a href="/#" class="nav-link text-info">
                <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                  <i class="fa-solid fa-flag"></i>
                </svg>
                <span class="nav-color-overlay">Poll</span>
              </a>
            </li> -->
          </ul>
        </div>
      </div>
    </div>
  </header>

  <section class="container mt-4">
    <article class="event-container">
      <% if (event) { %>
        <% const detailsArr=Object.values(event[0]) %>
          <% let url=detailsArr[7] %>
            <div class="row">
              <div class="col mt-3 text-center">
                <div class="poll-header font-overlay mb-2">
                  Copy the URL to share
                </div>
                <input id="url-link" class="col-8 text-center font-overlay" value="http://localhost:8080/vote/<%= url %>" />
                <div>
                  <button id="copy" class=" mt-2 btn btn-info btn-sm">Copy</button>
                </div>
              </div>
            </div>
            <% }; %>
    </article>
  </section>

  <section class="container mt-4">
    <article class="event-container">
      <% if (event) { %>
        <% const detailsArr=Object.values(event[0]) %>
          <% let title=detailsArr[5] %>
            <% let name=detailsArr[2] %>
              <% let desc=detailsArr[6] %>
                <% let url=detailsArr[7] %>
                  <div class="row poll-header">
                    <div class="col-8 mt-1">Poll Title: <%= title %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col mt-3 event-input font-overlay">Poll Created By: <%= name %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col mt-3 event-input font-overlay">Event Description: <%= desc %>
                    </div>
                  </div>
                  <% }; %>
    </article>
  </section>

  <form id="vote-form">
    <section class="container mt-4">
      <article class="event-container">
        <div class="row vote-poll-header">
          <div class="col mt-1 poll-header">Voter Information</div>
        </div>
        <div class="row align-items-center mt-2">
          <div class="col-2 text-center mt-1 poll-voter-info font-overlay">Name</div>
          <input class="col-8 mt-1" type="text" id="voter-name" value="<%= name %>" name="name">
          <div id="name-error-message"></div>
        </div>
        <div class="row align-items-center mt-2">
          <div class="col-2 text-center mt-1 poll-voter-info font-overlay">Email</div>
          <input class="col-8 mt-1" type="text" id="voter-email" value="<%= email %>" name="owner_email">
          <div id="email-error-message"></div>
        </div>
      </article>
    </section>

    <section class="container mt-4">
      <div class="event-container">

        <div class="row">
          <div class="col poll-header font-overlay">
            Polling Options
          </div>

          <div class="row">
            <article class="col">
              <% Object.keys(formattedEvent.times).forEach((timeId, i)=> { %>
                <% const time=formattedEvent.times[timeId] %>
                  <div class="mt-3 text-center poll-overlay">
                    <div>
                      <u>
                        Option <%= i + 1 %>
                      </u>
                    </div>
                    <label for="opt-<%=i+1%>"><%= time.startDate %> -> <%= time.endDate %></label>
                    <input type="radio" id="opt-<%=i+1%>a" name="vote-poll-<%=i+1%>"value="<%= timeId %>, true">Yes</input>
                    <input type="radio" id="opt-<%=i+1%>b" name="vote-poll-<%=i+1%>"value="<%= timeId %>, false">No</input>
                  </div>
                  <% }) %>
            </article>
            <div id="date-error-message" class="mt-2"></div>
          </div>
        </div>
    </section>

  <section class="container mt-4">
    <article class="event-container">
      <div class="poll-header">Live Results</div>
      <table class="col-10 mx-auto mt-2 poll-overlay">
        <tbody class="text-center mt-2">
        <tr>
          <th></th>
          <th>Yes - Lets GO!</th>
          <th>No - Not Today</th>
        </tr>
        <% Object.keys(formattedEvent.times).forEach((timeId, i)=> { %>
          <% const time=formattedEvent.times[timeId]; %>
          <% const yesVotes=time.votes.filter(vote=> vote.vote) %>
          <% const noVotes=time.votes.filter(vote=> !vote.vote) %>
          <tr>
            <td>
              Option <%= i + 1 %>
            </td>
            <td>
              <%= yesVotes.length %>
            </td>
            <td>
              <%= noVotes.length %>
            </td>
          </tr>
          <% }) %>
        </tbody>
        </table>
      </article>
  </section>

    <section class="container">
      <article class="row justify-content-center">
        <button class="col-3 mt-4 btn btn-info">Vote</button>
      </article>
    </section>
  </form>

  <footer class="footer-overlay position-sticky">
    <span class="text-muted">Footer Information Here</span>
  </footer>

</body>

</html>
